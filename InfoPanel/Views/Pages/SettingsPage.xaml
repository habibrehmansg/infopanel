<Page
    x:Class="InfoPanel.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InfoPanel.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfoPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:pages="clr-namespace:InfoPanel.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="0,60,0,20">
        <ScrollViewer Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="1340" Margin="20,30,20,0">

                <StackPanel Grid.Row="0" Margin="0,0,0,0">
                    <Label
                        Margin="0,0,0,10"
                        Content="Application"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <ui:CardControl Icon="Whiteboard24">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Run on startup" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Launch InfoPanel automatically on windows sign in." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.AutoStart}" />
                    </ui:CardControl>
                    <ui:CardControl Margin="0,10,0,0" Icon="Whiteboard24">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Minimize to tray" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Minimize InfoPanel to the system tray instead." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.MinimizeToTray}" />
                    </ui:CardControl>
                    <ui:CardControl Margin="0,10,0,0" Icon="Whiteboard24">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Start minimised" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Runs InfoPanel minimized on startup." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.StartMinimized}" />
                    </ui:CardControl>
                </StackPanel>

                <!--  Begin General Panel Settings  -->
                <StackPanel Margin="0,40,0,0">
                    <Label
                        Margin="0,0,0,10"
                        Content="Panel"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <ui:CardControl Icon="SelectAllOff20">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Selected item color" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Select an item via the Design Page or middle click on the panel itself when Design Page is active." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <metro:ColorPicker
                            Grid.Row="7"
                            Height="35"
                            MinWidth="200"
                            metro:TextBoxHelper.UseFloatingWatermark="False"
                            Background="Transparent"
                            SelectedColor="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.SelectedItemColor}" />
                    </ui:CardControl>

                    <ui:CardControl Margin="0,10,0,0" Icon="Grid20">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Show grid lines" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Display grid lines when an item is selected." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch Margin="10,0,0,0" IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.ShowGridLines}" />
                    </ui:CardControl>

                    <ui:CardControl
                        Margin="0,10,0,0"
                        Icon="SubGrid20"
                        Visibility="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.ShowGridLines, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Grid lines settings" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Customise the grid lines to your preferences." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <StackPanel>
                            <metro:ColorPicker
                                Grid.Row="7"
                                Height="35"
                                MinWidth="200"
                                metro:TextBoxHelper.UseFloatingWatermark="False"
                                Background="Transparent"
                                SelectedColor="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.GridLinesColor}" />
                            <StackPanel
                                Grid.Column="0"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right">
                                <ui:NumberBox
                                    Width="150"
                                    Margin="0,0,0,0"
                                    FontSize="14"
                                    LargeChange="10"
                                    MaxDecimalPlaces="0"
                                    Minimum="5"
                                    SmallChange="5"
                                    Text="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.GridLinesSpacing}"
                                    Value="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.GridLinesSpacing}" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                    Text="Grid spacing in px" />
                            </StackPanel>
                        </StackPanel>

                    </ui:CardControl>
                </StackPanel>
                <!--  End General Panel Settings  -->

                <StackPanel Margin="0,40,0,0">
                    <Label
                        Margin="0,0,0,10"
                        Content="Libre"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <ui:CardControl Icon="HardDrive20">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Enable LibreHardwareMonitor" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Enables polling LibreHardwareMonitor sensor data." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.LibreHardwareMonitor}" />
                    </ui:CardControl>

                    <ui:CardControl
                        Margin="0,10,0,0"
                        Icon="HardDrive20"
                        Visibility="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.LibreHardwareMonitor, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Game anti-cheat compatibility" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Enabling this will cause some sensors to stop working but may improve game anti-cheat compatibility." />
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.LibreHardMonitorRing0, Converter={StaticResource InverseBooleanConverter}}" />
                    </ui:CardControl>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,40,0,0">
                    <Label
                        Margin="0,0,0,10"
                        Content="Performance"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <ui:CardExpander Icon="Whiteboard24">
                        <ui:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Target Frame Rate" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="The rate at which panels (including LCD) are rendered (excluding Direct2D acceleration)." />
                                </StackPanel>
                            </Grid>
                        </ui:CardExpander.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel>
                                    <Slider
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        IsSnapToTickEnabled="True"
                                        Maximum="60"
                                        Minimum="1"
                                        TickFrequency="1"
                                        ToolTip="A lower value reduces CPU usage but results in slower updates"
                                        Value="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TargetFrameRate}" />
                                    <Grid Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="Target framerate" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TargetFrameRate}" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Margin="0,0,0,0">
                                    <Slider
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        IsSnapToTickEnabled="True"
                                        Maximum="3000"
                                        Minimum="100"
                                        TickFrequency="100"
                                        ToolTip="A higher value reduces CPU usage but results in slower updates"
                                        Value="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TargetGraphUpdateRate}" />
                                    <Grid Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="Target graph update rate (ms)" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TargetGraphUpdateRate}" />
                                    </Grid>
                                </StackPanel>
                            </Grid>


                        </Grid>

                    </ui:CardExpander>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,40,0,0">
                    <Label
                        Margin="0,0,0,10"
                        Content="USB Panels"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                    <!--  start BeadaPanel settings  -->
                    <ui:CardControl Margin="0,10,0,0" Icon="Whiteboard24">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="BeadaPanel by NXElec" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Works with any model." />
                                    <!--  start display status  -->
                                    <StackPanel Visibility="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.BeadaPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel
                                            Margin="0,5,0,0"
                                            Orientation="Horizontal"
                                            Visibility="{Binding Source={x:Static local:SharedModel.Instance}, Path=BeadaPanelRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock
                                                Margin="0,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="Panel is running:" />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="{Binding Source={x:Static local:SharedModel.Instance}, Path=BeadaPanelFrameRate, StringFormat={}{0} FPS}" />
                                            <TextBlock
                                                Margin="0,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="{Binding Source={x:Static local:SharedModel.Instance}, Path=BeadaPanelFrameTime, StringFormat={} @ {0}ms}" />
                                        </StackPanel>
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontSize="12"
                                            Foreground="Orange"
                                            Text="Display is not running. Check your usb connection and try again."
                                            Visibility="{Binding Source={x:Static local:SharedModel.Instance}, Path=BeadaPanelRunning, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                    </StackPanel>
                                    <!--  end display status  -->
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="10,0,0,0">
                                <!--  start profile  -->
                                <ComboBox
                                    Width="300"
                                    Margin="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Profiles}"
                                    SelectedValue="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.BeadaPanelProfile}"
                                    SelectedValuePath="Guid" />
                                <!--  end profile  -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--  start rotation  -->
                                    <ComboBox
                                        Margin="0,0,10,0"
                                        ItemsSource="{Binding Path=ViewModel.RotationValues, RelativeSource={RelativeSource AncestorType=pages:SettingsPage}}"
                                        SelectedItem="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.BeadaPanelRotation}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <!--  end rotation  -->
                                    <!--  start brightness  -->
                                    <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                        <Slider
                                            Margin="0,0,0,0"
                                            IsSnapToTickEnabled="True"
                                            Maximum="100"
                                            Minimum="0"
                                            TickFrequency="1"
                                            Value="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.BeadaPanelBrightness}" />
                                        <Grid Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                Text="Brightness" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                Text="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.BeadaPanelBrightness}" />
                                        </Grid>
                                    </StackPanel>
                                    <!--  end brightness  -->
                                </Grid>
                            </StackPanel>
                            <!--  start enable  -->
                            <ui:ToggleSwitch Margin="20,0,0,0" IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.BeadaPanel}" />
                            <!--  end enable  -->
                        </StackPanel>
                    </ui:CardControl>
                    <!--  end BeadaPanel settings  -->

                    <!--  start TuringPanelUSB settings  -->
                    <ui:CardControl Margin="0,10,0,0" Icon="Whiteboard24">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Turing Smart Screen 8.8&quot; REV 1.1 " />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Non-serial model after April 2025" />
                                    <!--  start display status  -->
                                    <StackPanel Visibility="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TuringPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel
                                            Margin="0,5,0,0"
                                            Orientation="Horizontal"
                                            Visibility="{Binding Source={x:Static local:SharedModel.Instance}, Path=TuringPanelRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock
                                                Margin="0,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="Panel is running:" />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="{Binding Source={x:Static local:SharedModel.Instance}, Path=TuringPanelFrameRate, StringFormat={}{0} FPS}" />
                                            <TextBlock
                                                Margin="0,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="{Binding Source={x:Static local:SharedModel.Instance}, Path=TuringPanelFrameTime, StringFormat={} @ {0}ms}" />
                                        </StackPanel>
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontSize="12"
                                            Foreground="Orange"
                                            Text="Display is not running. Check your usb connection and try again."
                                            Visibility="{Binding Source={x:Static local:SharedModel.Instance}, Path=TuringPanelRunning, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                    </StackPanel>
                                    <!--  end display status  -->
                                </StackPanel>
                            </Grid>
                        </ui:CardControl.Header>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="10,0,0,0">
                                <!--  start profile  -->
                                <ComboBox
                                    Width="300"
                                    Margin="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Profiles}"
                                    SelectedValue="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TuringPanelProfile}"
                                    SelectedValuePath="Guid" />
                                <!--  end profile  -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--  start rotation  -->
                                    <ComboBox
                                        Margin="0,0,10,0"
                                        ItemsSource="{Binding Path=ViewModel.RotationValues, RelativeSource={RelativeSource AncestorType=pages:SettingsPage}}"
                                        SelectedItem="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TuringPanelRotation}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <!--  end rotation  -->
                                    <!--  start brightness  -->
                                    <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                        <Slider
                                            Margin="0,0,0,0"
                                            IsSnapToTickEnabled="True"
                                            Maximum="100"
                                            Minimum="0"
                                            TickFrequency="1"
                                            Value="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TuringPanelBrightness}" />
                                        <Grid Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                Text="Brightness" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                Text="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TuringPanelBrightness}" />
                                        </Grid>
                                    </StackPanel>
                                    <!--  end brightness  -->
                                </Grid>
                            </StackPanel>
                            <!--  start enable  -->
                            <ui:ToggleSwitch Margin="20,0,0,0" IsChecked="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TuringPanel}" />
                            <!--  end enable  -->
                        </StackPanel>
                    </ui:CardControl>
                    <!--  end TuringPanelUSB settings  -->

                    <!--  start TuringPanelA settings  -->
                    <ui:CardControl Margin="0,10,0,0" Icon="Whiteboard24">
                        <ui:CardControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Text="Turing Smart Screen 3.5&quot;" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="Also known as Revision A." />
                                    <!--  start display status  -->
                                    <StackPanel Visibility="{Binding Source={x:Static local:ConfigModel.Instance}, Path=Settings.TuringPanelA, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel
                                            Margin="0,5,0,0"
                                            Orientation="Horizontal"
                                            Visibility="{Binding Source={x:Static local:SharedModel.Instance}, Path=TuringPanelARunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock
                                                Margin="0,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="Panel is running." />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
                                                Text="{Binding Source={x:Static local:SharedModel.Instance}, Path=TuringPanelAFrameRate, StringFormat={}{0} FPS}" />
                                            <TextBlock
                                                Margin="0,0,0,0"
                                                FontSize="12"
                                                Foreground="LawnGreen"
